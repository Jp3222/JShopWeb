<%- include('../plantillas/cabeza')%>
    <div class="row">
        <div class="row">
            <div class="col-6">
                <img src="/img/TenisSK.jpg" class="img-fluid" alt="producto">
            </div>
            <div class="col-6">
                <form class="form-control bg-dark" action="/Tienda/Productos/Agregar-Carrito/<%=data.id%>" method="post">
                    <h4 class="text-white text-center">
                        " <%=data.nombre%> "
                    </h4>
                    <h4 class="text-white">
                        Modelo: " <%=data.modelo%> "
                    </h4>
                    <h4 class="text-white">
                        marca " <%=data.marca%> "
                    </h4>
                    <div class="row">
                        <input class="form-control" type="number" id="cantidad" name="cantidad" min="1" max="10" step="1" value="1">
                    </div>
                    
                    <div class="row mt-5">
                        <a class="btn btn-primary" href="">
                            comprar
                        </a>
                    </div>
                    <div class="row mt-4">
                        <button class="btn btn-light" type="submit">
                            Agregar al carrito
                        </button>
                    </div>

                </form>
            </div>
        </div>
        <div class="row mt-5">
            <h4 class="text-white">
                marca " <%=data.Descripcion%>"
            </h4>

        </div>
    </div>
    <script>
        function getValue() {
            let componente =  document.getElementById("cantidad")
            return componente.getValue()
        }
    </script>
